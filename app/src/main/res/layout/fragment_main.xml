<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:add="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    android:orientation="vertical">




    <Button
        android:id="@+id/open_fragment_batton"
        add:layout_constraintEnd_toStartOf="parent"
        add:layout_constraintBaseline_toTopOf="parent"
        android:text="@string/BattonFragment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerView"
        android:padding="16sp"
        add:layout_constraintBottom_toBottomOf="parent"
        add:layout_constraintTop_toBottomOf="@id/open_fragment_batton"
        android:layout_width="match_parent"
        android:layout_height="0sp"
        android:clipToPadding="true"/>


</androidx.constraintlayout.widget.ConstraintLayout>